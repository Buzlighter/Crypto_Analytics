<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/header_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Автор:"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Jimmy.A"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="@id/header_author"
        app:layout_constraintStart_toEndOf="@id/header_author"
        app:layout_constraintBottom_toBottomOf="@id/header_author"/>



    <TextView
        android:id="@+id/header_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дата публикации:"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/header_author"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/publish_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="19.09.2003"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="@id/header_date"
        app:layout_constraintStart_toEndOf="@id/header_date"
        app:layout_constraintBottom_toBottomOf="@id/header_date"/>


    <TextView
        android:id="@+id/header_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Время публикации:"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/header_date"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/published_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="07:21"
        app:layout_constraintTop_toBottomOf="@id/header_date"
        app:layout_constraintStart_toEndOf="@id/header_time"/>

    <TextView
        android:id="@+id/header_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Источник:"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/header_time"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="NewsYork Times"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/header_time"
        app:layout_constraintStart_toEndOf="@id/header_source"/>


    <TextView
        android:id="@+id/header_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ссылка на источник:"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/header_source"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="https://mynews.org"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/header_link"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>